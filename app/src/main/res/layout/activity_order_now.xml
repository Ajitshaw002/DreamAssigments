<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical"
    android:background="@drawable/thirdscreen"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="170dp"

                android:background="@drawable/order"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="90dp"

    >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="30dp"
                android:text="YOUR ORDER"
                android:textColor="@color/colorPrimary"

                android:textSize="30dp"
                android:textStyle="bold" />
</LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"

                android:scrollbars="vertical"

                >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/editName"
                    android:layout_alignBottom="@+id/editName"
                    android:layout_alignParentStart="true"
                    android:text=" Name :"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="95dp"
                    android:hint="Your name...." />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/editName"
                    android:layout_marginTop="30dp"
                    android:text=" Email :"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_alignStart="@+id/editName"
                    android:hint="Email Id..." />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"


                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView3"
                    android:layout_marginTop="19dp"
                    android:text=" Password :"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText


                    android:id="@+id/editPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView4"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_alignParentEnd="true"
                    android:layout_alignStart="@+id/editEmail"
                    android:hint=" Password...." />

                <TextView

                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/spinnerContact"
                    android:layout_alignParentStart="true"
                    android:text=" Contact :"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerContact"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editPassword"
                    android:layout_below="@+id/textView4"
                    android:layout_marginTop="34dp">

                </Spinner>

                <EditText
                    android:id="@+id/editContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView7"
                    android:layout_toEndOf="@+id/spinnerContact"
                    android:hint="Contact No...." />

                <TextView

                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:layout_marginTop="20dp"
                    android:text=" Topic :"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView6"
                    android:layout_alignStart="@+id/spinnerContact"
                    android:hint="Topic...."
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="19dp"
                    android:text=" Type of document :"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerDocument"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@+id/textView6"
                    android:layout_alignStart="@+id/editTopic"
                    android:layout_alignTop="@+id/textView6"
                    android:layout_marginStart="89dp">

                </Spinner>

                <TextView

                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView6"
                    android:layout_marginTop="21dp"
                    android:text=" Due Date :"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/textDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editTopic"
                    android:layout_alignTop="@+id/textView8"
                    android:layout_marginStart="11dp"
                    android:hint="Select Date......"
                    android:inputType="textMultiLine" />

                <TextView

                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/country"
                    android:layout_marginTop="23dp"
                    android:text=" No of Page :"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Spinner

                    android:id="@+id/no_of_page_spinner"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/spinnerSpaccing"
                    android:layout_below="@+id/textDate"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp">

                </Spinner>

                <TextView

                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignEnd="@+id/spinnerCountry"
                    android:layout_below="@+id/textDate"
                    android:layout_marginTop="25dp"
                    android:text=" Country :"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Spinner

                    android:id="@+id/spinnerSpaccing"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/textView15"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="40dp">

                </Spinner>

                <TextView

                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/spinnerSpaccing"
                    android:layout_alignParentStart="true"
                    android:text=" Spacing:"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Spinner

                    android:id="@+id/spinnerCountry"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"

                    android:layout_alignStart="@+id/textDate"
                    android:layout_alignTop="@+id/country">

                </Spinner>

                <TextView

                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/spinnerSpaccing"
                    android:layout_marginTop="27dp"
                    android:text=" Subject:"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/editSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView11"
                    android:layout_alignStart="@+id/spinnerSpaccing"
                    android:hint="Subject..."
                    android:inputType="textMultiLine" />

                <TextView

                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/editSubject"
                    android:layout_marginTop="24dp"
                    android:text=" Dictionary:"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Spinner

                    android:id="@+id/spinnerDictionary"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/editSubject"
                    android:layout_alignTop="@+id/textView13">

                </Spinner>

                <TextView

                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView13"
                    android:layout_marginTop="29dp"
                    android:text=" Order Description:"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <EditText

                    android:id="@+id/editOrderDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView14"
                    android:layout_alignStart="@+id/editSubject"
                    android:layout_marginStart="69dp"
                    android:hint="OrderDescription..."
                    android:inputType="textMultiLine" />

                <Button
                    android:id="@+id/browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView14"
                    android:layout_marginTop="51dp"
                    android:layout_toStartOf="@+id/textDate"
                    android:text="Browse" />

                <TextView
                    android:id="@+id/selected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selected file"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"

                    android:layout_below="@+id/textView14"
                    android:layout_alignEnd="@+id/spinnerSpaccing"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:id="@+id/file_path"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="No file has been selected"
                    android:textSize="18sp"
                    android:layout_alignBaseline="@+id/browse"
                    android:layout_alignBottom="@+id/browse"
                    android:layout_alignStart="@+id/no_of_page_spinner" />
                <Button
                    android:id="@+id/browse1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse"
                    android:layout_below="@+id/browse"
                    android:layout_alignStart="@+id/browse" />
                <TextView
                    android:id="@+id/file_path1"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="No file has been selected"
                    android:textSize="18sp"
                    android:layout_alignBaseline="@+id/browse1"
                    android:layout_alignBottom="@+id/browse1"
                    android:layout_alignStart="@+id/file_path" />
                <Button
                    android:id="@+id/browse2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse"
                    android:layout_below="@+id/browse1"
                    android:layout_alignStart="@+id/browse1" />
                <TextView
                    android:id="@+id/file_path2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="No file has been selected"
                    android:textSize="18sp"
                    android:layout_alignBaseline="@+id/browse2"
                    android:layout_alignBottom="@+id/browse2"
                    android:layout_alignStart="@+id/file_path1" />
                <Button
                    android:id="@+id/browse3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse"
                    android:layout_below="@+id/browse2"
                    android:layout_alignStart="@+id/browse2" />
                <TextView
                    android:id="@+id/file_path3"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="No file has been selected"
                    android:textSize="18sp"
                    android:layout_alignBaseline="@+id/browse3"
                    android:layout_alignBottom="@+id/browse3"
                    android:layout_alignStart="@+id/file_path2" />
                <Button
                    android:id="@+id/browse4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Browse"
                    android:layout_below="@+id/browse3"
                    android:layout_alignStart="@+id/browse3" />
                <TextView
                    android:id="@+id/file_path4"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="No file has been selected"
                    android:textSize="18sp"
                    android:layout_alignBaseline="@+id/browse4"
                    android:layout_alignBottom="@+id/browse4"
                    android:layout_alignStart="@+id/file_path3" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                 <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                     android:layout_marginTop="40dp"
                />
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/edt_math_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_2" />
                <Button
                    android:id="@+id/btn_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edt_math_image"
                    android:text="Check CaptCha" />

                <Button
                    android:id="@+id/proceed"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Proceed..."
                    android:background="@color/colorPrimary"
                    android:layout_below="@+id/browse4"
                    android:layout_gravity="center"

                    android:layout_marginTop="31dp"
                    android:textColor="@color/White"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/thirdscreen">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/city">

            </ImageView>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


