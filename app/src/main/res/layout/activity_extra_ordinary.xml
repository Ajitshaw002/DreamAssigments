<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/extra"
            android:background="@drawable/thirdscreen"/>
        <TextView

            android:layout_width="wrap_content"
            android:background="@drawable/thirdscreen"
            android:layout_height="180dp"
            android:text="     Students can't ignore their homework. \n     They devote  many hours every day and spend  \n     the weekends with  homework for doing the  \n     coursework. In reality,the students get homework\n     but the  students cannot organize them.\n      We are here to help you with all  kinds of \n     assignments. So get your homework help online! \n     You can get homework at the right time with \n     the help of experienced writers."
            android:textSize="15sp"/>
        <ExpandableListView
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="710dp"
            android:id="@+id/expan_listview">

        </ExpandableListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:orientation="vertical"
            android:background="@drawable/thirdscreen">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="     Copyright Â© 2015 Dream Assignment. All Rights \n                                          Reserved."
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/textFacebook"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/city">

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
  
    </RelativeLayout>
</ScrollView>
