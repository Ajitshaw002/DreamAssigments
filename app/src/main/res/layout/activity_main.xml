<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<android.support.design.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_content"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:id="@+id/toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </android.support.design.widget.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="58dp"
        >
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/SnowWhite"
            >


            <android.support.v7.widget.CardView
                android:layout_width="95dp"
                android:layout_height="70dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginBottom="1dp"
               >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="About"
                    android:background="@color/White"
                    android:textStyle="bold"
                    android:id="@+id/home"
                    android:gravity="center"
                    android:textAlignment="gravity"



                    android:textSize="18dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="95dp"
                android:layout_height="70dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Services"
                    android:background="@color/White"
                    android:textStyle="bold"
                    android:id="@+id/services"
                    android:gravity="center"
                    android:textAlignment="gravity"

                    android:textSize="18dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="95dp"
                android:layout_height="70dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="1dp">

                <TextView
                    android:id="@+id/answers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:gravity="center"
                    android:text="Answers"
                    android:textAlignment="gravity"
                    android:textSize="18dp"

                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="95dp"
                android:layout_height="70dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="1dp">

                <TextView
                    android:id="@+id/orderNow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/White"
                    android:gravity="center"
                    android:text="Order Now"
                    android:textAlignment="gravity"
                    android:textSize="18dp"

                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="95dp"
                android:layout_height="70dp"
                app:cardCornerRadius="5dp"
                android:layout_marginLeft="1dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sample"
                    android:textStyle="bold"
                    android:id="@+id/sample"
                    android:background="@color/White"
                    android:gravity="center"
                    android:textAlignment="gravity"

                    android:textSize="18dp"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
        </HorizontalScrollView>
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/thirdscreen"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="   How It Works"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="25dp"
                android:text="     1.Choose an Assignment"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:text="     2.Place Your Order"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                android:text="     3.Get Quality Help"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="   Our Best Features"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:text="     1.Available 24x7"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="5dp"
                android:text="         Our talented assignment writers are available \n         round the clock with the original work."
                android:textSize="15dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:text="     2.Assured deadline"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="5dp"
                android:text="         We complete our assignment within time limit\n         with the talented writers."
                android:textSize="15dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:text="     3.Assured Privacy"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="5dp"
                android:text="        Our experts are trained writers who can do \n        assignments on any topics."
                android:textSize="15dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:text="     4.Online Assignment on all topics"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="5dp"
                android:text="        We offer assignments on a wide range of topics \n        accurately."
                android:textSize="15dp"

                />

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark">

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="   Topics"
                android:textSize="30dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="     Associate Degrees"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:id="@+id/textView" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"

                    android:background="@drawable/hand" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.14"
                    android:text="1405 Home \n   Work"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="     Bachelor's Degrees"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:id="@+id/textView1" />

                    <ImageView
                        android:id="@+id/imageView33"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"

                        android:background="@drawable/hand" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.14"
                        android:text="1309 Home \n   Work"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="     Master's Degrees"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:id="@+id/textView2" />

                    <ImageView
                        android:id="@+id/imageView32"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"

                        android:background="@drawable/hand" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.14"
                        android:text="2890 Home \n   Work"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="     Doctorates"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:id="@+id/textView21" />

                    <ImageView
                        android:id="@+id/imageView34"
                        android:layout_width="40dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="5dp"

                        android:background="@drawable/hand" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.14"
                        android:text="1730 Home \n   Work"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimaryDark">
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
              >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/des_1"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/des_2"/>
                <ImageView
                    android:layout_width="90dp"
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/des_3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"


                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Solve your academic problems \n                        with us...."
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimaryDark">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Facebook"
                    android:textColorHighlight="@color/colorPrimary"
                    android:id="@+id/textFacebook"
                    android:layout_marginLeft="30dp"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Twitter"
                    android:textColorHighlight="@color/colorPrimary"
                    android:id="@+id/textTwitter"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GooglePlus"
                    android:textColorHighlight="@color/colorPrimary"
                    android:id="@+id/textGooglePlus"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Linkedin"
                    android:textColorHighlight="@color/colorPrimary"
                    android:id="@+id/textLinkedin"
                    android:layout_marginLeft="20dp"
                    />
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="     Copyright © 2015 Dream Assignment. All Rights \n                                          Reserved."
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/textFacebook"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/city">

                </ImageView>
            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
    </ScrollView>
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/navheader"
        app:menu="@menu/menu_navigation" />

</android.support.v4.widget.DrawerLayout>
